<!-- 
  Wrapper launch file for the Motoman specific robot_state node.
-->
<launch>
  <!-- IP of robot (or PC running simulation) -->
  <arg name="robot_ip" />

  <rosparam command="load" file="$(find ros_ragnar)/config/ragnar_joint_names.yaml" />

  <!-- load the correct version of the robot state node -->
  <node name="ragnar_streaming_interface" pkg="ros_ragnar" type="ragnar_streamer_node" output="screen">
    <param name="robot_ip" value="$(arg robot_ip)"/>
  </node>
</launch>